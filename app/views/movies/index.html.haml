-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :method => :get do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "rating[#{rating}]", 1, (@ratings.include?(rating) ? true : false)
  = submit_tag 'Refresh'

%table#movies
  %thead
    %tr
      %th{ :class => ("hilite" if @sort_by == "title") }
        %a#title_header= link_to "Movie Title", movies_path(:sort_by => :title, :rating => @ratings)
      %th{ :class => ("hilite" if @sort_by == "rating") }
        %a#rating_header= link_to "Rating", movies_path(:sort_by => :rating, :rating => @ratings)
      %th{ :class => ("hilite" if @sort_by == "release_date") }
        %a#release_date_header= link_to "Release Date", movies_path(:sort_by => :release_date, :rating => @ratings)
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
